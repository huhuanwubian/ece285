function [ x, S, r ]=OMP( A,b,options )
%
% input: A normalized!

min_err=options.min_error;
b0=b;
[n,m]=size(A);
S=zeros(m,1);
x=zeros(m,1);
%Q=zeros(n,m); % TODO: implicit Q of QR
iter=1;
while norm(b) > min_err
    coefs=A'*b;
    [coef,ind]=max(coefs); % assuming only one max exists
    S(iter)=ind;
    x(1:iter)=A(\b;
    b=b-coef*A(ind); %TODO: implicit Q of QR
    x(ind)=coef;
end
r=norm(b)/norm(b0);
end

